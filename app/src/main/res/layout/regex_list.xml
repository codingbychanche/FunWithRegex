<?xml version="1.0" encoding="utf-8"?>

<!-- This is an list entry -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/colorShellOutput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/the_regex"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:textColor="@color/shellText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/description"
        android:textSize="10dp"
        android:paddingLeft="20dp"
        android:layout_below="@id/the_regex"
        android:textColor="@color/shellText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/date"
        android:textSize="10dp"
        android:paddingLeft="20dp"
        android:layout_below="@id/description"
        android:textColor="@color/shellText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RatingBar
        android:id="@+id/rating"
        android:layout_below="@id/date"
        android:paddingLeft="20dp"
        android:scaleY=".5"
        android:scaleX=".5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="1"/>

    <ImageButton
        android:id="@+id/edit_this_entry"
        android:paddingRight="10dp"
        android:background="@color/colorShellOutput"
        android:scaleX=".8"
        android:scaleY=".8"
        android:paddingLeft="20dp"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_below="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/delete_this_entry"
        android:layout_below="@+id/rating"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@+id/edit_this_entry"
        android:scaleX=".8"
        android:scaleY=".8"
        android:background="@color/colorShellOutput"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>



